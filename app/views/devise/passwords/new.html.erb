<div class="forgot-password-container">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'forgot-password-form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field forgot-password-email-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="actions forgot-password-actions">
      <%= f.submit "Send me reset password instructions", class: 'forgot-password-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
