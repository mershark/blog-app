<%= form_for [@post.author, @post, Comment.new], url: user_post_comments_path(@post.author, @post), class: "comment-form" do |form| %>
  <div class="form-group">
    <%= form.text_area :text, class: "form-control", placeholder: "Type your comment here..." %>
  </div>  

  <div class="buttons-container">
    <div class="form-group">
      <%= form.submit "Add Comment", class: "see-all-button" %>
    </div>
  </div>
  <div>
  </div>
<% end %>

<%= form_with model: @like, url: user_post_likes_path(@user, @post), method: :post, class: "like-container", local: true do |like_form| %>
  <%= like_form.hidden_field :user_id, value: current_user.id %>
  <%= like_form.submit "Like", class: "like-button" %>
<% end %>
