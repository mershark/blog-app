<h1>Create a New Post</h1>

<%= form_with(model: [@user, @post], url: user_posts_path(@user), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_area :text, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Post", class: "see-all-button" %>
  </div>
<% end %>
