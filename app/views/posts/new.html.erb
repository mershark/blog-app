<!-- app/views/posts/new.html.erb -->

<div class="create-post-container">
  <h1>Create a New Post</h1>

  <%= form_with(model: [@user, @post], url: user_posts_path(@user), local: true, html: { class: 'create-post-form' }) do |form| %>
    <div class="form-group create-post-title-field">
      <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
    </div>

    <div class="form-group create-post-text-field">
      <%= form.text_area :text, class: "form-control", placeholder: "Text" %>
    </div>

    <div class="form-group create-post-actions">
      <%= form.submit "Create Post", class: "see-all-button create-post-button" %>
    </div>
  <% end %>
</div>
